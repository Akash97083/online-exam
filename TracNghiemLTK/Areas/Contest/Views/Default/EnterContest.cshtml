@model TracNghiemLTK.Areas.Contest.Models.EnterContestModel

@{
    ViewBag.Title = "Enter Exam";
    Layout = "~/Areas/Contest/Views/Shared/_Layout.cshtml";
}

<div>
    <a class="hiddenanchor" id="signup"></a>
    <a class="hiddenanchor" id="signin"></a>
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                @using (Html.BeginForm())
                {

                    <h1>Enter exam</h1>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div>
                        @Html.TextBoxFor(model => model.Password, new { @type = "password", @class = "form-control", @placeholder = "Exam password", @required = "" })
                    </div>
                    <div>
                        <button class="btn btn-default submit">Start</button>
                        <br>
                    </div>
                    <a class="reset_pass" href="#">Forgot password ?</a>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <p class="change_link">
                            Couldn't start ?
                            <a href="#signup" class="to_register"> Report </a>
                        </p>
                        <div class="clearfix"></div>
                    </div>
                }
            </section>
        </div>
        <div id="register" class="animate form registration_form">
            <section class="login_content">
                <form>
                    <h1>Report</h1>
                    <div>
                        <input type="text" class="form-control" placeholder="Username" required="" />
                    </div>
                    <div>
                        <input type="email" class="form-control" placeholder="Email" required="" />
                    </div>
                    <div>
                        <input type="text" class="form-control" placeholder="Content" required="" />
                    </div>
                    <div>
                        <a class="btn btn-default submit" href="index.html">Submit</a>
                    </div>
                    <div class="clearfix"></div>
                    <div class="separator">
                        <p class="change_link">
                            Cancel report ?
                            <a href="#signin" class="to_register"> Login </a>
                        </p>
                        <div class="clearfix"></div>
                        <br />
                        <div>
                            <p>Copyright © Exam 2021</p>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>



