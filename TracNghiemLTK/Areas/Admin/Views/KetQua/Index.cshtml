
@{
    ViewBag.Title = "Kết quả thi";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model PagedList.IPagedList<DataLTK.KetQua>
@using PagedList.Mvc;

<div class="title_right">
    <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="button">Go!</button>
            </span>
        </div>
    </div>
</div>
<div class="clearfix"></div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>All Submissions</h2>
            <ul class="nav navbar-right panel_toolbox">
                <li>
                    <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href="#">Settings 1</a>
                        </li>
                        <li>
                            <a href="#">Settings 2</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a class="close-link"><i class="fa fa-close"></i></a>
                </li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-hover table-responsive">
                <thead>
                    <tr>
                        <th>Result Code</th>
                        <th>Exam Code</th>
                        <th>Class</th>
                        <th>Student ID</th>
                        <th>Name</th>
                        <th>Date</th>
                        <th>Score</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="row_@item.MaKetQua">
                        <td>
                            @item.MaKetQua
                        </td>
                        <td>
                            @item.MaDe
                        </td>
                        <td>
                            @item.ThiSinh.Lop.TenLop
                        </td>
                        <td>
                            @item.ThiSinh.MaThiSinh
                        </td>
                        <td>@item.ThiSinh.HoTen</td>
                        <td>@(item.NgayThi.HasValue ? item.NgayThi.Value.ToString("dd/MM/yyyy") : "Không có dữ liệu")</td>
                        <td>
                            @item.Diem / 100
                        </td>
                        @*<td>
             @Ajax.ActionLink("Xóa", "Delete", new { @id = item.MaKetQua }, new AjaxOptions
        {
            Confirm = "Xác nhận xóa!",
            OnComplete = "$('#row_" + item.MaKetQua + "').remove()",
            HttpMethod = "Delete"
        }, new { @class = "btn btn-danger btn-xs" })
         </td>*@
                    </tr>}

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>
</div>



